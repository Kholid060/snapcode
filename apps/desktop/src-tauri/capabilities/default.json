{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "sql:default",
    "log:default",
    "log:allow-log",
    "sql:allow-execute",
    "store:default",
    "core:window:allow-start-dragging",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$RESOURCE/db/**/*" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$RESOURCE/db/**/*" }]
    },
    "shell:allow-open"
  ]
}
